# -----------------------------------------------------------------------------
# Django development overrides
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DJANGO_SECRET_KEY=local-dev-secret
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,api

# When using the built-in reverse proxy stack, traffic hits Nginx on localhost
FRONTEND_BASE_URL=http://localhost:3000
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Relax security toggles so HTTPS is optional during local development
DJANGO_SECURE=0
SECURE_SSL_REDIRECT=0
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0

# Allow the built-in dummy login when no external IdP is configured
OIDC_DEV_LOGIN_ENABLED=1
