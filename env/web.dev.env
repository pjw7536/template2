# -----------------------------------------------------------------------------
# Next.js development environment variables
# -----------------------------------------------------------------------------
NODE_ENV=development
NPM_CONFIG_PRODUCTION=false
NEXT_TELEMETRY_DISABLED=1
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Align authentication callbacks with the local proxy
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=please-change-me

# Direct browser calls straight to the API container when using docker-compose.dev
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
BACKEND_API_URL=http://api:8000
