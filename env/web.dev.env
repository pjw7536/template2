# ============================================================================
# Next.js development environment variables
# docker-compose.dev.yml 의 web 서비스에서 사용됩니다.
# ============================================================================

# --- Build/runtime toggles --------------------------------------------------
NODE_ENV=development
NPM_CONFIG_PRODUCTION=false
NEXT_TELEMETRY_DISABLED=1
# 파일 변경 감지를 위해 폴링 사용 (WSL/VM 호환성 확보)
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# --- Auth metadata ----------------------------------------------------------
# NextAuth 콜백 URL (dev reverse proxy: localhost:3000)
NEXTAUTH_URL=http://localhost:3000
# 개발용 시크릿. prod에서는 고정 값 금지
NEXTAUTH_SECRET=please-change-me

# --- API endpoint wiring ----------------------------------------------------
# 브라우저 -> API 직접 호출 (개발 모드에서 CORS 허용됨)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# Next.js 서버사이드 fetch 시 사용할 내부 네트워크 주소
BACKEND_API_URL=http://api:8000
