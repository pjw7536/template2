# -----------------------------------------------------------------------------
# Shared Django configuration
# -----------------------------------------------------------------------------
DJANGO_TIME_ZONE=UTC

# Database (defaults to the Airflow Postgres instance on the shared network)
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=appdb
DJANGO_DB_USER=airflow
DJANGO_DB_PASSWORD=airflow
DJANGO_DB_HOST=airflow-postgres
DJANGO_DB_PORT=5432
DJANGO_DB_CONN_MAX_AGE=60

# Authentication redirects that work for both environments
DJANGO_LOGIN_REDIRECT_URL=/
DJANGO_LOGOUT_REDIRECT_URL=/

# Reverse proxy awareness (required when running behind Nginx)
USE_X_FORWARDED_HOST=1
DJANGO_USE_PROXY_SSL_HEADER=1
SECURE_REFERRER_POLICY=same-origin

# Optional OIDC provider configuration (leave empty to enable the dev login)
OIDC_RP_CLIENT_ID=
OIDC_RP_CLIENT_SECRET=
OIDC_RP_SIGN_ALGO=HS256
OIDC_OP_AUTHORIZATION_ENDPOINT=
OIDC_OP_TOKEN_ENDPOINT=
OIDC_OP_USER_ENDPOINT=
OIDC_OP_JWKS_ENDPOINT=

# Development login fallbacks that double as smoke-test accounts
AUTH_DUMMY_EMAIL=demo@example.com
AUTH_DUMMY_NAME=Demo User

# Gunicorn runtime defaults (only used in production builds)
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
