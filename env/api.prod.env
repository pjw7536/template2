# -----------------------------------------------------------------------------
# Django production overrides
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=api,web,example.com

# Replace `example.com` with the public domain that terminates TLS
FRONTEND_BASE_URL=https://example.com
DJANGO_CORS_ALLOWED_ORIGINS=https://example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com

# Harden security headers when operating behind the reverse proxy
DJANGO_SECURE=1
SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1

# Disable the dummy login so only real IdPs are accepted
OIDC_DEV_LOGIN_ENABLED=0
