# Django core settings
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,api
DJANGO_TIME_ZONE=UTC

# Frontend / CORS
FRONTEND_BASE_URL=http://localhost
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost
# Reverse proxy path prefix (예: /api, 절대경로 사용 시 https://api.example.com)
PUBLIC_API_BASE_URL=/api
DJANGO_LOGIN_REDIRECT_URL=/
DJANGO_LOGOUT_REDIRECT_URL=/

# Database (PostgreSQL defaults for local docker)
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=public
DJANGO_DB_USER=drone_user
DJANGO_DB_PASSWORD=dronepwd
DJANGO_DB_HOST=db
DJANGO_DB_PORT=5432
DJANGO_DB_CONN_MAX_AGE=60

# Proxy / security toggles
USE_X_FORWARDED_HOST=1
DJANGO_USE_PROXY_SSL_HEADER=1
DJANGO_SECURE=0
SECURE_SSL_REDIRECT=0
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0
SECURE_REFERRER_POLICY=same-origin

# Google OAuth configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_SCOPE=openid email profile
GOOGLE_OAUTH_AUTH_ENDPOINT=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_OAUTH_TOKEN_ENDPOINT=https://oauth2.googleapis.com/token
GOOGLE_OAUTH_USERINFO_ENDPOINT=https://openidconnect.googleapis.com/v1/userinfo
GOOGLE_OAUTH_REDIRECT_URI=

# Gunicorn runtime defaults
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
